{
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"],
    "source": "functions"
  },
  "hosting": {
    "public": "./test-app/build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/accounts",
        "function": "accounts"
      },
      {
        "source": "/api/accounts/**",
        "function": "accounts"
      },
      {
        "source": "/api/transactions",
        "function": "transactions"
      },
      {
        "source": "/api/transactions/**",
        "function": "transactions"
      },
      {
        "source": "/api/rates",
        "function": "rates"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
